# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# remember there is no space between file extentions. It is a regex rule
## *.{h, cpp} is wrong. Use *.{h.cpp}

[*]
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

[*.{erb,rb,json,yml,lua,js,yaml,java,tf,sh}]
indent_size = 2

[*.{vcxproj,vcxproj.filters}]
insert_final_newline = false

[*.{h,cpp,cs}]
insert_final_newline = false
guidelines = 120, 130

[*.tmp.yea]
insert_final_newline = false
